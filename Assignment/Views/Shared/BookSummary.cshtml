@model Book

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="/images/@Model.ImageUrl" alt="Picture of @Model.Name">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Books" asp-action="DisplayDetails" asp-route-id="@Model.ID">@Model.Name</a>
            </h3>
            <h5><b>Category: @Model.Category.Name</b></h5>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="Cart" asp-action="AddToShoppingCart"
                   asp-route-bookId="@Model.ID" asp-route-amount="1">Mua ngay</a>
            </p>
        </div>
    </div>
</div>