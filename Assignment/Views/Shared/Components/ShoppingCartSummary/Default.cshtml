@model CartViewModel

@if (Model.Cart.CartDetails.Count > 0)
{
    <li>
        <a asp-controller="Cart" asp-action="Index">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @Model.Cart.CartDetails.Count
            </span>
        </a>
    </li>
}